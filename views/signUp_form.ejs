<%- include('partials/head') %>
<body>
  <%- include('partials/navbar') %>
  <main>
    <div class="card userForm">
      <h4 class="card-header text-center">Sign-up</h4>
      <form class="card-body text-center" action="/sign-up" method="post">
        <div class="row g-3">
          <div class="col mb-3">
            <label for="firstName" class="form-label">First Name</label>
            <input type="text" class="form-control" name="firstName" id="firstName" value="<% (typeof user === 'undefined') ? '' : user.firstName %>">
          </div>
          <div class="col mb-3">
            <label for="lastName" class="form-label">Last Name</label>
            <input type="text" class="form-control" name="lastName" id="lastName" value="<% (typeof user === 'undefined') ? '' : user.lastName %>">
          </div>
        </div>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" class="form-control" name="username" id="username" value="<% (typeof user === 'undefined') ? '' : user.username %>">
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" name="password" id="password" value="<% (typeof user === 'undefined') ? '' : user.password %>">
        </div>
        <button type="submit" class="btn btn-dark">Sign up</button>
        <br>
        <a class="redirectForm" href="/login">Already have an account? Log in.</a>
      </form>
    </div>
    <% if(errors.length) { %>
        <ul>
            <% errors.forEach(error => {  %>
                <li class="err"><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>
  </main>
  <%- include('partials/footer') %>
</body>
</html>